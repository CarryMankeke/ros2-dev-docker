<!-- pseudocódigo URDF de la base móvil -->
<robot name="mm_base_pseudo">
  <crear>
    <args prefix="mm_base_" scale="1.0" />
    <links>
      <link nombre="chassis" />
      <link nombre="wheel_left" />
      <link nombre="wheel_right" />
      <link nombre="caster" />
    </links>
    <joints tipo="continuous" descripcion="ruedas izquierda/derecha" />
  </crear>
  <leer>
    <plugin diff_drive parametros="wheel_radius, separation, cmd_timeout" />
    <frames tf="base_link, odom, map" />
  </leer>
  <actualizar>
    <colisiones forma="cajas/cilindros" />
    <visual materiales="placeholder" />
  </actualizar>
  <borrar>
    <limpiar descripcion="al migrar a URDF final" />
  </borrar>
</robot>
