<!-- pseudocÃ³digo URDF del brazo 6DOF + gripper -->
<robot name="mm_arm_pseudo">
  <crear>
    <args prefix="mm_arm_" scale="1.0" controllers_file="config/arm_controllers.yaml" />
    <links>
      <link nombre="base" />
      <link nombre="j1">longitud 0.22</link>
      <link nombre="j2">longitud 0.22</link>
      <link nombre="j3">longitud 0.18</link>
      <link nombre="j4">longitud 0.14</link>
      <link nombre="j5">longitud 0.12</link>
      <link nombre="j6">longitud 0.10</link>
      <link nombre="gripper" />
    </links>
    <joints tipo="revolute" secuencia="6" limites="vel/acc" seguridad="parada_emergencia" />
  </crear>
  <leer>
    <controladores archivo="$(find-pkg-share mm_bringup)/config/arm_controllers.yaml" />
    <materiales valor="placeholder" />
  </leer>
  <actualizar>
    <propiedades inertial="simplificadas" collision="cajas" visual="colores" />
    <use_sim_time>true</use_sim_time>
  </actualizar>
  <borrar>
    <limpiar descripcion="al regenerar xacro definitivo" />
  </borrar>
</robot>
