__NAMESPACE__/controller_manager:
  ros__parameters:
    update_rate: 100
    use_sim_time: true

    joint_state_broadcaster:
      type: joint_state_broadcaster/JointStateBroadcaster

    arm_trajectory_controller:
      type: joint_trajectory_controller/JointTrajectoryController

    gripper_trajectory_controller:
      type: joint_trajectory_controller/JointTrajectoryController

__NAMESPACE__/joint_state_broadcaster:
  ros__parameters:
    use_sim_time: true

__NAMESPACE__/arm_trajectory_controller:
  ros__parameters:
    use_sim_time: true
    joints:
      - __PREFIX__arm_shoulder_pan_joint
      - __PREFIX__arm_shoulder_lift_joint
      - __PREFIX__arm_elbow_joint
      - __PREFIX__arm_wrist_1_joint
      - __PREFIX__arm_wrist_2_joint
      - __PREFIX__arm_wrist_3_joint
    command_interfaces:
      - velocity
    state_interfaces:
      - position
      - velocity
    state_publish_rate: 50.0
    action_monitor_rate: 20.0

__NAMESPACE__/gripper_trajectory_controller:
  ros__parameters:
    use_sim_time: true
    joints:
      - __PREFIX__gripper_joint
    command_interfaces:
      - velocity
    state_interfaces:
      - position
      - velocity
    state_publish_rate: 50.0
    action_monitor_rate: 20.0

# Prueba minima:
# ros2 run controller_manager spawner arm_trajectory_controller --controller-manager /mm1/arm/controller_manager
